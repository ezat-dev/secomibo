	</bean> 

	<tx:annotation-driven/>

	<!-- 포스트그레 메인 -->	
	 <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	        <property name="dataSource" ref="dataSource" />
	        <property name="configLocation" value="classpath:mybatis/config/mybatis-context.xml"></property>
	 </bean>
	 <bean id="session" class="org.mybatis.spring.SqlSessionTemplate">
	        <constructor-arg ref="sqlSessionFactory" />
	 </bean>
		 
	 <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	       <property name="dataSource" ref="dataSource"/>
	   </bean>

	<context:component-scan base-package="com.tkheat.dao com.tkheat.service"/>
	<bean id="userController" class="com.tkheat.controller.UserController" />
</beans>
